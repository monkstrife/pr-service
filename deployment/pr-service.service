[Unit]
Description=PR Reviewer Assignment Service
After=network.target

[Service]
User=root
WorkingDirectory=/root/apps/pr-service
ExecStart=/root/apps/pr-service/pr-service
Restart=always
RestartSec=4
StandardOutput=inherit
EnvironmentFile=/root/apps/pr-service/config.env

[Install]
WantedBy=multi-user.target